{
  "name": "media-spoofer-pro",
  "version": "1.0.0",
  "description": "Professional media transformation for social platforms",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "setup": "node scripts/setup-dev.js",
    "test-ffmpeg": "node test-ffmpeg-setup.js",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac --x64 && electron-builder --mac --arm64 && npm run combine-mac",
    "build-mac-intel": "electron-builder --mac --x64",
    "build-mac-arm": "electron-builder --mac --arm64",
    "combine-mac": "node scripts/combine-mac-architectures.js"
  },
  "keywords": [
    "media",
    "spoofer",
    "video",
    "image",
    "processing"
  ],
  "author": "Pony Agency",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.ponyagency.mediaspoofer",
    "productName": "Media Spoofer Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!temp-ffmpeg/**/*",
      "!test-*/**/*",
      "!debug-*/**/*",
      "!scripts/**/*",
      "!ffmpeg*",
      "!ffprobe*"
    ],
    "extraResources": [
      "ffmpeg.exe",
      "ffprobe.exe",
      "ffmpeg",
      "ffprobe"
    ],
    "win": {
      "target": "nsis",
      "icon": "logo.png",
      "publish": null
    },
    "mac": {
      "target": "dmg",
      "icon": "logo.png",
      "publish": null,
      "defaultArch": "universal",
      "minimumSystemVersion": "10.15.0",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "category": "public.app-category.utilities",
      "darkModeSupport": true,
      "electronLanguages": ["en"],
      "extendInfo": {
        "NSHighResolutionCapable": true,
        "LSMinimumSystemVersion": "10.15.0",
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Video",
            "CFBundleTypeExtensions": ["mp4", "mov", "avi", "webm"],
            "CFBundleTypeRole": "Viewer"
          },
          {
            "CFBundleTypeName": "Image",
            "CFBundleTypeExtensions": ["jpg", "jpeg", "png", "heic", "webp"],
            "CFBundleTypeRole": "Viewer"
          }
        ]
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "license": "LICENSE.txt"
    }
  }
}