{
  "name": "media-spoofer-pro",
  "version": "1.0.0",
  "description": "Professional media transformation for social platforms",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "setup": "node scripts/setup-dev.js",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac --universal"
  },
  "keywords": [
    "media",
    "spoofer",
    "video",
    "image",
    "processing"
  ],
  "author": "Pony Agency",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.ponyagency.mediaspoofer",
    "productName": "Media Spoofer Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!ffmpeg*",
      "!ffprobe*"
    ],
    "extraResources": [
      "ffmpeg-windows/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "logo.png",
      "publish": null
    },
    "mac": {
      "target": "dmg",
      "icon": "logo.png",
      "publish": null,
      "defaultArch": "universal",
      "minimumSystemVersion": "10.15.0",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "license": "LICENSE.txt"
    }
  }
}